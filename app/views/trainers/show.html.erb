<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<%= link_to "New Pokemon!", new_path, :class => "button medium" if @trainer==current_trainer%>
<div class="container">
  <div class="row">
    <h3>Pokemon</h3>
          <% if @trainer == current_trainer %>
            <% @pokemons.each do |pokemon| %>
              <h4><%= pokemon.name %></h4> Level: <%= pokemon.level %> Health: <%= pokemon.health %> <%= button_to "Heal!", heal_path(id: pokemon), :class => "button medium", :method => :patch %> <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
              <% end %>
          <% else %>
            <% @pokemons.each do |pokemon| %>
              <% if pokemon.health > 0 %>
               <h4><%= pokemon.name %></h4> Level: <%= pokemon.level %> Health: <%= pokemon.health %>
                <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
              <% end %>
            <% end %>
          <% end %>
  </div>
</div>
